<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context="sku.market.com.Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/top"
        >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="내정보"
            android:background="@drawable/skumarket"
            android:id="@+id/textView"
            android:gravity="center_vertical|center_horizontal"

            android:textColor="#71bf44"
            android:textStyle="bold"
            android:textSize="24dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:id="@+id/mid">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:weightSum="10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                >
            </LinearLayout>

            <Button

                android:layout_width="wrap_content"
                android:padding="15dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/sellproduct"
                android:background="@drawable/bbok"
                android:layout_alignParentLeft="true"
                android:textColor="#81CAE1"
                android:text="판매등록물품"
                android:onClick="btn_myselllist"
                android:layout_gravity="center_vertical" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                >
            </LinearLayout>
            <Button
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/buyproduct"
                android:background="@drawable/bbok"
                android:onClick="btn_mybuylist"
                android:textColor="#EE4B4E"
                android:text="구매등록물품"
                android:layout_gravity="center_vertical" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:weightSum="10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                >
            </LinearLayout>

            <Button

                android:layout_width="wrap_content"
                android:padding="15dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/insert"
                android:background="@drawable/bbok"
                android:textColor="#347CA8"
                android:text="프로필수정"
                android:onClick="btn_editprofile"
                android:layout_gravity="center_vertical" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                >
            </LinearLayout>
            <Button
                android:padding="15dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/logout"
                android:background="@drawable/bbok"
                android:onClick="btn_logout"
                android:textColor="#ffac0a"
                android:text="로그아웃"
                android:layout_gravity="center_vertical" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bot"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/hhouse"
            android:background="#ffffff"
            android:text="홈"
            android:paddingTop="5dp"
            android:textColor="#9e9e9e"
            android:id="@+id/btn_home_id"
            android:textSize="14dp"
            />


        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/myinfoclick"
            android:background="#ffffff"
            android:text="내정보"
            android:paddingTop="5dp"
            android:textColor="#71bf44"
            android:textSize="14dp"
            />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/sellregistration"
            android:background="#ffffff"
            android:text="판매등록 "
            android:textColor="#9E9E9E"
            android:paddingTop="5dp"
            android:id="@+id/myinfosellregistration"
            android:textSize="14dp"
            />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/buyregistration"
            android:background="#ffffff"
            android:text=" 구매등록"
            android:paddingTop="5dp"
            android:textColor="#9E9E9E"
            android:id="@+id/myinfobuyreg"
            android:textSize="14dp"

            />



        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/buyboard"
            android:background="#ffffff"
            android:text="삽니다"
            android:textColor="#9E9E9E"
            android:paddingTop="5dp"
            android:id="@+id/myinfobuyboard"
            android:textSize="14dp"
            />
    </LinearLayout>

</LinearLayout>

